namespace System.EventSourcing.Hosting.Transformation
{
    public static class TransformationDefinitions
    {
        public static FilterExpression<TKey, TContent> KeyMatches<TKey, TContent>(Func<TKey, bool> condition)
        {
            return new FilterExpression<TKey, TContent> 
            {
                IsMatch = (key, content) =>
                {
                    return condition(key);
                }
            };
        }
    }
}
