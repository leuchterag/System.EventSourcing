namespace System.EventSourcing.Hosting.Transformation
{
    public static class When<TKey, TContent>
    {
        public static FilterExpression<TKey, TContent> KeyMatches(Func<TKey, bool> condition)
        {
            return new FilterExpression<TKey, TContent> 
            {
                IsMatch = (key, content) =>
                {
                    return condition(key);
                }
            };
        }
    }
}
